<script>
$('#myTable').DataTable();
$(".datepicker").flatpickr();
$('#form').parsley();

$('#country').on('change', function () {
    let countryId = $(this).val();
    let url = '{{ path("app_states", {"countryId": "PLACEHOLDER"}) }}';
    url = url.replace('PLACEHOLDER', countryId);
    // call ajax
    $.ajax({
        url: url,
        method: 'GET',
        success: function (data) {
            $('#state').empty().append('<option value="">Select State</option>');
            $.each(data, function (code, state) {
                console.log(state);
                $('#state').append(`<option value="${state.id}">${state.name}</option>`);
            });
        }
    });
});
</script>
{% endblock %}

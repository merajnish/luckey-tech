                                                    <option value="Bachelor of Science">Bachelor of Science (BSc)</option>
                                                    <option value="Bachelor of Commerce">Bachelor of Commerce (BCom)</option>
                                                    <option value="Bachelor of Technology">Bachelor of Technology (BTech)</option>
                                                    <option value="Bachelor of Engineering">Bachelor of Engineering (BE)</option>
                                                    <option value="Bachelor of Computer Application">Bachelor of Computer Application (BCA)</option>
                                                    <option value="Master of Arts">Master of Arts (MA)</option>
                                                    <option value="Master of Science">Master of Science (MSc)</option>
                                                    <option value="Master of Commerce">Master of Commerce (MCom)</option>
                                                    <option value="Master of Technology">Master of Technology (MTech)</option>
                                                    <option value="Master of Engineering">Master of Engineering (ME)</option>
                                                    <option value="MBA">Master of Business Administration (MBA)</option>

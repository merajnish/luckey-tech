{% extends 'admin/admin-base.html.twig' %}

{% block title %}Students{% endblock %}

{% block body %}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        {% include 'admin/admin-topbar.html.twig' %}

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">{% if student is defined and student is not null %} Student update {% else %}Student add {% endif %}</h1>

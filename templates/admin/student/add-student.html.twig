                                                <select class="form-select form-control" id="studentGender" name="gender" required>
                                                    <option selected disabled>Select gender</option>
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="studentDOB">Date of Birth</label>
                                                <input type="date" class="form-control datepicker" id="studentDOB" name="dob" placeholder="Enter date of birth" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="studentDOA">Date of Admission</label>
                                                <input type="date" class="form-control datepicker" id="studentDOA" name="doa" placeholder="Enter date of admission" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="mobile">Mobile</label>
                                                <input type="mobile" class="form-control" id="mobile" name="mobile" placeholder="Enter phone number" data-parsley-type="number" data-parsley-length="[10, 12]" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-4">
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label for="studentQualification" class="form-label">Qualification</label>
                                                <select class="form-select form-control" name="qualification" id="studentQualification" required>
                                                    <option selected disabled>Select Qualification</option>

{% extends 'admin/admin-base.html.twig' %}

{% block title %}courses{% endblock %}

{% block body %}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        {% include 'admin/admin-topbar.html.twig' %}

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Courses</h1>
                <a href="{{path('app_course_add')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" title="Add"><i class="fas fa-plus-square"></i></a>
            </div>

            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-12 col-md-6 mb-4">
                    <div class="card border-left-primary- shadow h-100 py-2">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Course name</th>
                                            <th>Course type</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {# {{dump(courses)}} #}
                                        {% for course in courses %}
                                        <tr>
                                            <td>{{course.courseName}}</td>
                                            <td>{{course.courseType}}</td>
                                            <td>
                                                <a href="javascript:void(0)" dataUrl="{{path('app_course_delete',{'id':course.id})}}" class="btn btn-info btn-sm delete"><i class="fas fa-trash"></i></a>
                                                <a href="{{path('app_course_edit',{'id':course.id})}}" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square fs-5 text-primary"></i></a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                

            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <div class="modal delete-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header alert-warning">
                    <h5 class="modal-title">Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this course!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a type="button" class="btn btn-primary">Delete</a>
                </div>
            </div>
        </div>
    </div>

    {% include 'admin/sticky-footer.html.twig' %}

</div>
<!-- End of Content Wrapper -->

<script>
$(document).ready(function(){
    $('#myTable').DataTable();
    $(".delete").click(function(){
        $url = $(this).attr("dataUrl");
        $(".delete-modal").find("a").attr("href",$url);
        $(".delete-modal").modal("show");
    });
});
</script>
{% endblock %}

{% extends 'admin/admin-base.html.twig' %}

{% block title %}Fee{% endblock %}

{% block body %}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        {% include 'admin/admin-topbar.html.twig' %}

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">{% if fees is defined and fees is not null %} Fee update {% else %}Fee add {% endif %}</h1>
                {# <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                        class="fas fa-download fa-sm text-white-50"></i> Generate Report</a> #}
                {# <a href="{{path('app_fees_add')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" title="Add"><i class="fas fa-plus-square"></i></a> #}
                <nav aria-label="breadcrumb bg-transparent">
                    <ol class="breadcrumb bg-transparent">
                        <li class="breadcrumb-item"><a href="{{path('app_fees')}}">Fee list</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{% if fees is defined and fees is not null %} Fee update {% else %}Fee add {% endif %}</li>
                    </ol>
                </nav>
            </div>

            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-12 col-md-6 mb-4">
                    <div class="card border-left-primary- shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-12 col-md-6 mb-4">
                                    <h5 class="form-title"><span>Fee Student</span></h5>
                                </div>
                            </div>
                            {% if fees is defined and fees is not null %}
                                <form id="feesForm" method="POST" data-parsley-validate>
                                    <!-- 2 column grid layout with text inputs for the first and fees types -->
                                    <div class="row mb-4">
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formStudent">Student</label>
                                                <select class="form-control select2" id="formStudent" name="student" required>
                                                    <option selected>Select student</option>
                                                    {% for student in students %}
                                                    <option {% if fees.student.id == student.id %} selected {% endif %} value="{{student.id}}">{{student.firstName ~ " " ~ student.lastName}} ({{student.registrationNumber}})</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formCourse">Course</label>
                                                <select class="form-control" id="formCourse" name="course" required>
                                                    <option selected>Select course</option>
                                                    {% for course in courses %}
                                                    <option {% if fees.course.id == course.id %} selected {% endif %} value="{{course.id}}">{{course.courseName}}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formAmount">Amount</label>
                                                <input type="text" value="{{fees.amount}}" name="amount" id="formAmount" class="form-control" placeholder="0.00" data-parsley-type="number" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formPaymentMode">Payment mode</label>
                                                <select class="form-control" id="formPaymentMode" name="paymentMode" required>
                                                    <option selected>Select payment mode</option>
                                                    <option {% if fees.paymentMode == "cash" %} selected {% endif %} value="cash">Cash</option>
                                                    <option {% if fees.paymentMode == "online" %} selected {% endif %} value="online">Online</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit button -->
                                    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block- mb-4">Update fees</button>
                                </form>
                            {% else %}
                                <form id="feesForm" method="POST" data-parsley-validate>
                                    <!-- 2 column grid layout with text inputs for the first and fees types -->
                                    <div class="row mb-4">
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formStudent">Student</label>
                                                <select class="form-control select2" id="formStudent" name="student" required>
                                                    <option selected>Select student</option>
                                                    {% for student in students %}
                                                    <option value="{{student.id}}">{{student.firstName ~ " " ~ student.lastName}} ({{student.registrationNumber}})</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formCourse">Course</label>
                                                <select class="form-control" id="formCourse" name="course" required>
                                                    <option selected>Select course</option>
                                                    {% for course in courses %}
                                                    <option value="{{course.id}}">{{course.courseName}}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formAmount">Amount</label>
                                                <input type="text" name="amount" id="formAmount" class="form-control" placeholder="0.00" data-parsley-type="number" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-sm-4 mb-3 mb-sm-0">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="formPaymentMode">Payment mode</label>
                                                <select class="form-control" id="formPaymentMode" name="paymentMode" required>
                                                    <option selected>Select payment mode</option>
                                                    <option value="cash">Cash</option>
                                                    <option value="online">Online</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit button -->
                                    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block- mb-4">Add fees</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>

                

            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    {% include 'admin/sticky-footer.html.twig' %}

</div>
<!-- End of Content Wrapper -->

<script>
//$('#myTable').DataTable();
// $('#feesForm').parsley();
$(document).ready(function () {
    $(".datepicker").flatpickr();
    $('#feesForm').parsley();
    $('.select2').select2();
});
</script>
{% endblock %}

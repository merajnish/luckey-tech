{% extends 'admin/admin-base.html.twig' %}

{% block title %}teachers{% endblock %}

{% block body %}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        {% include 'admin/admin-topbar.html.twig' %}

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">teachers</h1>
                {# <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                        class="fas fa-download fa-sm text-white-50"></i> Generate Report</a> #}
                <a href="{{path('app_teacher_add')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" title="Add"><i class="fas fa-plus-square"></i></a>
            </div>

            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-12 col-md-6 mb-4">
                    <div class="card border-left-primary- shadow h-100 py-2">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Registration</th>
                                            <th>Registration date</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Gender</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    {# <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Office</th>
                                            <th>Age</th>
                                            <th>Start date</th>
                                            <th>Salary</th>
                                        </tr>
                                    </tfoot> #}
                                    <tbody>
                                        {# {{dump(teachers)}} #}
                                        {% for teacher in teachers %}
                                        <tr>
                                            <td>{{teacher.registrationNumber ?? 'Not available' }}</td>
                                            <td>{{teacher.dateOfAdmission|date("m/d/Y")}}</td>
                                            <td>{{teacher.firstName ~ " " ~ teacher.lastName}}</td>
                                            <td>{{teacher.mobile}}</td>
                                            <td>{{teacher.gender}}</td>
                                            <td>
                                                <a href="#view.php?id=1" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                                <a href="{{path('app_teacher_edit',{'id':teacher.id})}}" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square fs-5 text-primary"></i></a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                

            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    {% include 'admin/sticky-footer.html.twig' %}

</div>
<!-- End of Content Wrapper -->

<script>
$('#myTable').DataTable();
</script>
{% endblock %}
